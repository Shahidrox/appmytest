<div class="col-lg-9 col-md-9 col-sm-12">
    <div class="col-lg-12 col-sm-12">
        <span class="title">CONTACT US</span>
    </div>
    <div class="col-lg-12 col-sm-12 hero-feature">
        <table class="table table-bordered tbl-checkout">
            <tbody>
                <tr>
                    <td>Product Name</td>
                    <td>
                        <input type="text" class="product_name form-control" palceholder="exp: Clothing or Electronics etc">
                    </td>
                </tr>
                <tr>
                    <td>Quantity</td>
                    <td>
                        <input type="text" class="product_count form-control" palceholder="Product Quantity">
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="btn-group btns-cart">
        <button type="button" class="btn btn-primary" id="submit">Add</button>
        </div>
<script type="text/javascript">
$("#submit").click(function () {
    if ($(".product_name").val()){
        $.ajax({ type: 'POST',url: '/save_product',data: ({'product_name': $(".product_name").val(),'product_count':$(".product_count").val()}),success: function (data) {alert(data.status);location.reload();}
                });
    }else{
        alert("Please Enter Product Name and Product Quantity")
    }
});
</script>
        <hr />
Available Products : 
<% @producets.each do |producets| %>
<button class="btn btn-default" ><%= producets.product_name %></button> 
<%end%>
    </div>
</div>

