<%= render :partial =>  "layouts/slider" %>
    <div class="row">
      <%= render :partial =>  "layouts/side_bar" %>
<div class="col-lg-9 col-md-9 col-sm-12">
  <div class="col-lg-12 col-sm-12">
	<span class="title">FEATURED PRODUCTS</span>
  </div>
  

<% @products.each do |cat| %>
    <div class="col-lg-4 col-sm-4 hero-feature text-center">
        <div class="thumbnail">
            <a href="/detail" class="link-p" style="position: relative;">
                <%
                    if cat.product_image_content_type.nil?
                        @src=cat.product_image_file_name
                    else
                        @src=cat.product_image.url
                    end
                %>
                <img src="<%= @src %>" alt="" style="position: absolute; width: 250px; height: auto; max-width: none; max-height: none; left: -4px; top: 0px;">
            </a>
            <div class="caption prod-caption">
                <h4><a href="/detail"><%= cat.category.category_name%></a></h4>
                <p>
                  <%= truncate(cat.category.description, length: 60, omission: '... (continued)')%>
                </p>
                <p>
                    </p><div class="btn-group">
                        <a href="#" class="btn btn-default">
                            Rs. <%= cat.category.price%>                            
                        </a>
                        <a href="#" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Buy</a>
                    </div>
                <p></p>
            </div>
        </div>
    </div>
    
<%end%> 
    
    
    
    
    
</div>
<div class="clearfix visible-sm"></div>
</div>